<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/menu_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大林职教务系统"
        android:textColor="#141414"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/linl1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_top"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
             android:textColor="#141414"
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户名:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_user"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linl2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_top"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
             android:textColor="#141414"
            android:id="@+id/tv_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="密码:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2" 
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linl3"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_top"
        android:layout_marginTop="190dp"
        android:orientation="horizontal">

        <TextView
             android:textColor="#141414"
            android:id="@+id/tv_verifation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="验证码:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_verifation"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_verifation"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/linl2"
        android:layout_toRightOf="@id/linl2" />

    <ImageButton
        android:id="@+id/ib_refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/linl3"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/linl3"
        android:background="@drawable/refresh" />

    <Button
        android:id="@+id/bt_login"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="20dp"
        android:textColor="#141414"
        android:background="#00000000"
        android:layout_width="150dp"
        android:layout_below="@+id/linl3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp" />

</RelativeLayout>

